{
  "compilerOptions": {
    "module": "ES2022",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "target": "ES2022",
    "lib": ["ES2022", "DOM"],
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "strictPropertyInitialization": false,
    "emitDeclarationOnly": false,
    "declarationMap": false,
    "declaration":true,
    "noImplicitAny": true,
    "strict": true,
    "sourceMap": true,
    "incremental": true,
    "baseUrl": "./",
    "outDir": "./dist/",
    "types": ["@webgpu/types"]
  },
  "include": ["./src/"],
  "exclude": [
    "node_modules",
    "test",
    "dist",
    "migrations",
  ]
}
